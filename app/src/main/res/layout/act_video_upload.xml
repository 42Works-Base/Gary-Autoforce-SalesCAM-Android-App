<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:keepScreenOn="true"
    android:background="@drawable/bg_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearHeading"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:src="@drawable/af_logo"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"/>

        <LinearLayout
            android:orientation="vertical"
            android:elevation="@dimen/_5sdp"
            android:padding="@dimen/_15sdp"
            android:gravity="center_horizontal"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            android:layout_marginBottom="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/bg_home"
            android:layout_below="@+id/linearHeading"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/thumsUpImage"
                android:src="@drawable/ic_thumb_up"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_110sdp" />

            <RelativeLayout
                android:id="@+id/progressLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ProgressBar
                    android:id="@+id/circular_progress"
                    style="@style/CircularDeterminateProgressBar"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:indeterminateOnly="false"
                    android:progress="0"
                    android:progressDrawable="@drawable/circular_progess1"
                    android:rotation="-90"
                    tools:progress="60"
                    android:layout_centerInParent="true"/>

                <TextView
                    android:id="@+id/progress_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_18sdp"
                    android:layout_centerInParent="true"
                    tools:text="100%" />
            </RelativeLayout>



            <TextView
                android:id="@+id/uplodedText"
                android:text="Video Uploading"
                android:textSize="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/colorPrimary"
                android:textAppearance="@style/MyFontStyle.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Your video is now uploading and once processed will be sent in your SalesCAM landing page to your customer."
                android:textSize="@dimen/_11sdp"
                android:gravity="center"
                android:layout_marginTop="@dimen/_15sdp"
                android:textColor="@color/colorHintGrey"
                android:textAppearance="@style/MyFontStyle.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <Button
                android:id="@+id/btn_done"
                android:text="Return to Home Screen"
                android:textSize="@dimen/_12sdp"
                android:textAllCaps="true"
                android:layout_marginTop="@dimen/_25sdp"
                android:background="@drawable/capsule_primary"
                android:layout_width="@dimen/_190sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_above="@+id/btn_done"
                android:textAppearance="@style/MyFontStyle.Button"
                android:textColor="@color/colorWhite" />

            <Button
                android:id="@+id/btn_quit"
                android:text="Quit SalesCAM"
                android:textSize="@dimen/_12sdp"
                android:textAllCaps="true"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_35sdp"
                android:background="@drawable/capsule_white_brdr_primary"
                android:layout_width="@dimen/_190sdp"
                android:layout_height="@dimen/_35sdp"
                android:textAppearance="@style/MyFontStyle.Button"
                android:textColor="@color/colorPrimary" />



        </LinearLayout>

    </LinearLayout>





</RelativeLayout>