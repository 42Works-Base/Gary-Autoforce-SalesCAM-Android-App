<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/linearHeading"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:src="@drawable/af_logo"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"/>

        <LinearLayout
            android:orientation="vertical"
            android:elevation="@dimen/_5sdp"
            android:padding="@dimen/_15sdp"
            android:gravity="center_horizontal"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            android:layout_marginBottom="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/bg_home"
            android:layout_below="@+id/linearHeading"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome to SalesCAM"
                android:gravity="center"
                android:textAppearance="@style/MyFontStyle.Bold"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_16sdp" />


                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imgPhoto"
                        android:src="@drawable/ic_photo_camera"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Take Photo"
                        android:gravity="center"
                        android:textAppearance="@style/MyFontStyle.Medium"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_14sdp" />

                    <ImageView
                        android:id="@+id/imgVideo"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:src="@drawable/ic_video_camera"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Record Video"
                        android:gravity="center"
                        android:textAppearance="@style/MyFontStyle.Medium"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_14sdp" />

                    <ImageView
                        android:id="@+id/imgShare"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:src="@drawable/ic_video_play"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Share Existing Video"
                        android:gravity="center"
                        android:textAppearance="@style/MyFontStyle.Medium"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_14sdp" />

                </LinearLayout>





        </LinearLayout>

    </LinearLayout>



    <RelativeLayout
        android:id="@+id/relativeRating"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        android:elevation="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:alpha="0.3"
            android:clickable="true"
            android:focusable="true"
            android:background="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="@dimen/_25sdp"
            android:background="@drawable/bg_white_round"
            android:layout_width="@dimen/_270sdp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/shadow"
                android:src="@drawable/ic_star_rate"
                android:padding="@dimen/_15sdp"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"/>

            <TextView
                android:id="@+id/txt_heading"
                android:text="Loving SalesCAM?"
                android:gravity="center"
                android:textSize="@dimen/_14sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_message"
                android:text="Please take a moment to show your\nsupport by rating the app"
                android:gravity="center"
                android:textSize="@dimen/_12sdp"
                android:textStyle="normal"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:textColor="@color/colorBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnRatingYes"
                android:text="YES"
                android:layout_marginTop="@dimen/_15sdp"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textAllCaps="false"
                android:textSize="@dimen/_11sdp"
                android:background="@drawable/capsule_primary"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_30sdp" />

            <Button
                android:id="@+id/btnRatingNo"
                android:text="NO"
                android:gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:textColor="@color/colorPrimary"
                android:textAllCaps="false"
                android:textSize="@dimen/_11sdp"
                android:background="@drawable/capsule_white_brdr_primary"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_30sdp" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>