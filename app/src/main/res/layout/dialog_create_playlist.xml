<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@drawable/bg_white_round"
        android:layout_width="@dimen/_270sdp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_heading"
                android:text="Create New Playlist"
                android:gravity="center"
                android:textSize="@dimen/_14sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <EditText
                android:id="@+id/edt_name"
                android:background="@drawable/bg_white_brdr_grey"
                android:inputType="text"
                android:maxLines="1"
                android:imeOptions="actionDone"
                android:layout_below="@+id/txt_heading"
                android:paddingLeft="@dimen/_7sdp"
                android:paddingRight="@dimen/_7sdp"
                android:paddingTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:scrollbars="vertical"
                android:gravity="start"
                android:layout_marginTop="@dimen/_15sdp"
                android:hint="Enter playlist name here"
                android:paddingBottom="@dimen/_5sdp"
                android:textColorHint="@color/colorHintGrey"
                android:textSize="@dimen/_12sdp"
                android:textAppearance="@style/MyFontStyle.Light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_submit"
                android:text="SUBMIT"
                android:layout_below="@+id/edt_title"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textAllCaps="false"
                android:layout_margin="@dimen/_15sdp"
                android:textSize="@dimen/_12sdp"
                android:background="@drawable/capsule_primary"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_30sdp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/img_close"
            android:padding="@dimen/_15sdp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_close_black"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"/>

    </RelativeLayout>

</LinearLayout>