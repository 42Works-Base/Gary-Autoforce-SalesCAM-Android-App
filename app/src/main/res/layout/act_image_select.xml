<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:keepScreenOn="true"
    android:background="@color/colorBlack"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/actionbar"
        layout="@layout/sublayout_actionbar"
        android:layout_height="@dimen/_45sdp"
        android:layout_width="match_parent"/>

    <RelativeLayout
        android:layout_below="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_preview"
            android:layout_centerInParent="true"
            android:layout_width="@dimen/_320sdp"
            android:layout_height="@dimen/_320sdp">

            <ImageView
                android:id="@+id/img_selected"
                android:layout_above="@+id/rl_bottom_options"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <com.autoforcecam.app.CircleRecycler.CircleRecyclerView
                android:id="@+id/recycler_overlay"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>