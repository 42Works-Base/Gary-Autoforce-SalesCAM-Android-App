<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:keepScreenOn="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:src="@mipmap/bg_light"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ScrollView
        android:layout_above="@+id/rl_done"
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="@dimen/_5sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_heading"
                android:text="Facebook Post Description"
                android:gravity="center"
                android:textSize="@dimen/_14sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Description"
                android:textSize="@dimen/_12sdp"
                android:layout_alignParentRight="true"
                android:paddingLeft="@dimen/_6sdp"
                android:includeFontPadding="false"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:textColor="@color/colorBlack"
                android:textAppearance="@style/MyFontStyle.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/edt_desc"
                android:background="@drawable/bg_white_brdr_grey"
                android:inputType="textMultiLine"
                android:imeOptions="actionDone"
                android:layout_below="@+id/txt_heading"
                android:paddingLeft="@dimen/_7sdp"
                android:paddingRight="@dimen/_7sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:scrollbars="vertical"
                android:gravity="start"
                android:minHeight="@dimen/_150sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:hint="Enter post description here"
                android:textColorHint="@color/colorHintGrey"
                android:textSize="@dimen/_12sdp"
                android:textAppearance="@style/MyFontStyle.Light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/aaa"
                android:src="@drawable/ic_logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/rl_done"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:padding="@dimen/_15sdp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_post"
            android:text="Upload"
            android:textAllCaps="true"
            android:textSize="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/capsule_primary"
            android:layout_width="@dimen/_190sdp"
            android:layout_height="@dimen/_35sdp"
            android:textAppearance="@style/MyFontStyle.Button"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/btn_exit"
            android:text="i'm done"
            android:textAllCaps="true"
            android:textSize="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/capsule_white_brdr_primary"
            android:layout_width="@dimen/_190sdp"
            android:layout_height="@dimen/_35sdp"
            android:textAppearance="@style/MyFontStyle.Button"
            android:textColor="@color/colorPrimary" />

    </LinearLayout>


</RelativeLayout>